<div class="prices">
	
	<h2><%= t("Prices") %></h2>
	
	<div class="text_wrapper">
		<div class="prices_items">
			<div class="price_items_wrapper">
			<% i = 0 %>
			<% @prices.each do |price| %>
				<div class="price_item pi<%= i %>">
					<%= price.hours %> <%= t("hours") %>/<%= t("day") %>&nbsp; 
					<%= price.price %> <%= t("EUR") %>/<%= t("hour")%>  
				</div>
				<% i+=1  %>
			<% end %>
			</div>
		</div>
		
		
		<p>
			<b><%= t("Subscription includes") %>:</b>
			<ul>
				<li><%= t("chat support software + its implementation into your web + software maintenance") %></li>
				<li><%= t("trained operators who will provide online customer support on your web") %></li>
				<li><%= t("unlimited access to all chat support conversations") %></li>
			</ul>
		</p>
		
		<p>
			<b><%= t("SPECIAL OFFERS") %>:</b>
			<ul>
				<li><%= t("Get a 10% discount for recommending our service to our next client!") %></li>
				<li><%= t("Have more websites? Get support for second website with 10% discount!") %></li>
			</ul>
		</p>
		
		<p><b><%= t("IMPORTANT INFO") %>:</b>
		<%= t("Prices above are calculated for small businesses (less than 80 chat support clients per 24 hours)") %></p>
	</div>	
	
	<div class="scene">
			<img src="/images/web/prices/prices_person1.png" alt="person" />
	</div>
	
</div>