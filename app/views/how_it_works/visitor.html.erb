	<h2><%= link_to t("How it works"), how_it_works_url(:section) %> &gt; <em><%= t("When website wisitor contacts our live support") %></em></h2>
	
	<div class="window step1">
		<div class="text">
			<h3><blockquote><%= t("hiw_visitor_step1_title")%></blockquote></h3>
			<p><%= t("hiw_visitor_step1_text")%></p>
		</div>
		<div class="picture"><a class="fancybox" href="/images/web/hiw/visitor/pict_1_full.png"><img src="/images/web/hiw/visitor/pict_1.png" alt="step1" /></a></div>
		<div class="numbering"><img src="/images/web/hiw/visitor/numbering_1.png" alt="1"></div>
